{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "baseUrl": "./",
    "target": "ES2020",
    "moduleResolution": "Node16",
    "module": "Node16",
    "noImplicitAny": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "watchOptions": {
    "excludeDirectories": [
      "node_modules"
    ]
  },
  "include": [
    "src"
  ],
  "$schema": "https://json.schemastore.org/tsconfig"
}